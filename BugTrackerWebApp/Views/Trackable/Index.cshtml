@model IEnumerable<Trackable>

<h1>Trackable view</h1>

<div class="row">
    <div class="col-2">Name</div>
    <div class="col-2">Type</div>
    <div class="col-2">Date</div>
    <div class="col-2">Status</div>
    <div class="col-2">Project</div>
    <div class="col-2">Lead Dev</div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-2">@item.Name</div>
        <div class="col-2">@item.TrackType</div>
        <div class="col-2">@item.DateCreated</div>
        <div class="col-2">@item.Status</div>
        <div class="col-2">@item.Project.Name</div>
        <div class="col-2">Lead Dev</div>
        <div class="col-2"><a type="button" class="btn btn-danger" asp-controller="Trackable" asp-action="Delete" asp-route-id="@item.Id"><span class="bi-trash"></span>&nbsp;Delete</a></div>
    </div>
}

<br/>

<a type="button" class="btn btn-primary btn-sm" asp-controller="Trackable" asp-action="Create"><span class="bi-plus-square-fill"></span>&nbsp;Add</a>