@model BugTrackerWebApp.ViewModels.RegisterViewModel

@if (TempData["Error"] != null)
{
    <div class="col-12 alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"]</span>
    </div>
}


<div class="mt-5 align-items-start min-vh-100" loading="lazy">
    <span class="mask opacity-6"></span>
    <div class="container my-auto">
      <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
          <div class="card bg-gradient-default z-index-0 fadeIn3 fadeInBottom">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-success shadow-success border-radius-lg py-3 pe-1">
                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Sign up</h4>
              </div>
            </div>
            <div class="card-body">
              <form asp-action="Register" role="form" class="text-start">
                @if (TempData["Error"] == "This email address is already taken")
                {
                  <div class="input-group input-group-outline is-invalid my-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>  
                }
                else
                {
                  <div class="input-group input-group-outline is-valid my-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>
                }
                
                
                @if (TempData["Error"] == "Password and confirmed password do not match" || TempData["Error"] == "Unsecure password: use upper and lower case letters, numbers and non-alphanumeric symbols for better security")
                {
                  <div class="input-group input-group-outline is-invalid mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                
                  <div class="input-group input-group-outline is-invalid mb-3">
                    <label asp-for="ConfirmedPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmedPassword" type="password" class="form-control">
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                  </div>
                }
                else
                {
                  <div class="input-group input-group-outline is-valid mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                
                  <div class="input-group input-group-outline is-valid mb-3">
                    <label asp-for="ConfirmedPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmedPassword" type="password" class="form-control">
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                  </div>
                }
                
                <div class="text-center">
                  <button type="submit" class="btn bg-gradient-success w-100 my-4 mb-2">Sign up</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>